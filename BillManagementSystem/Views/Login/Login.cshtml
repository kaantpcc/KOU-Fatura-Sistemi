@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Login Page | Kaan Topcu</title>
	<link rel="stylesheet" href="~/loginForm/css/style.css" type="text/css">
</head>
<body>
	<div class="form-box">
		<div class="form-value">
			<form method="post">
				<h1>Giriş Yap</h1>
				<div class="inputbox">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
						<path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
					</svg>
					<input type="email" required name="Email" autocomplete="off">
					<label for="">Email</label>
				</div>
				<div class="inputbox">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
						<path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z" />
					</svg>
					<input type="password" required name="Password" autocomplete="off">
					<label for="">Password</label>
				</div>
				@if (ViewBag.ErrorMessage != null)
				{
					<div style="color: red; font-size: 12px;">@ViewBag.ErrorMessage</div>
				}
				<button class="login-button">Giriş Yap</button>
			</form>

			<div class="image-container">
				
			</div>

		</div>
	</div>
</body>
</html>